{
  "name": "deploy-zotero-assistant-mcp",
  "version": "0.3.0",
  "description": "Deploy Zotero MCP server to Cloudflare Workers",
  "bin": {
    "deploy-zotero-assistant-mcp": "bin/cli.ts"
  },
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "setup": "tsx setup/server.ts",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "build": "wrangler deploy --dry-run --outdir=dist && mv dist/index.js dist/worker.mjs"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "1.25.2",
    "agents": "^0.3.6",
    "zotero-assistant-mcp": "*"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250109.0",
    "@types/node": "^22.0.0",
    "open": "^10.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.7.0",
    "wrangler": "^4.0.0"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/upascal/zotero-assistant-mcp-remote.git",
    "directory": "packages/deploy"
  },
  "keywords": ["mcp", "zotero", "cloudflare-workers", "deploy"]
}
